{
    "name": "Iframe Refresher",
    "version": "0.2.0",
    "description": "Per-domain iframe name and keystroke management extension",
    "permissions": ["storage", "tabs", "activeTab", "contextMenus", "scripting"],
    "host_permissions": ["<all_urls>"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "assets/bookmark.png",
          "assets/play.png",
          "assets/delete.png",
          "assets/save.png",
          "assets/edit.png"
        ],
        "matches": ["<all_urls>"]
      }
    ],
    "action": {
      "default_icon": {
        "16": "assets/ext-icon.png",
        "24": "assets/ext-icon.png",
        "32": "assets/ext-icon.png"
      },
      "default_title": "Iframe Refresher",
      "default_popup": "popup.html"
    },
    "manifest_version": 3
}
